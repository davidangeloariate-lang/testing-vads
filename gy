import React, { useState, useEffect, useRef } from 'react';
import { Bell, Github, AlertCircle, Check, Activity, Lock, RefreshCw } from 'lucide-react';

export default function App() {
  const [repo, setRepo] = useState('facebook/react');
  const [token, setToken] = useState('');
  const [isMonitoring, setIsMonitoring] = useState(false);
  const [logs, setLogs] = useState([]);
  const [lastEventId, setLastEventId] = useState(null);
  const [error, setError] = useState(null);
  const intervalRef = useRef(null);

  // Sound effect for notification (simulated)
  const playNotification = () => {
    // In a real browser app we might use Audio(), but we'll just visually flash here
    // to avoid autoplay policies blocking sound.
  };

  const addLog = (message, type = 'info') => {
    setLogs(prev => [{
      id: Date.now() + Math.random(),
      time: new Date().toLocaleTimeString(),
      message,
      type
    }, ...prev].slice(0, 50));
  };

  const fetchEvents = async () => {
    setError(null);
    try {
      const headers = {
        'Accept': 'application/vnd.github.v3+json',
      };
      if (token) {
        headers['Authorization'] = `token ${token}`;
      }

      const response = await fetch(`https://api.github.com/repos/${repo}/events?per_page=5`, { headers });
      
      if (response.status === 403) {
        throw new Error("Rate limit exceeded. Please use a Personal Access Token.");
      }
      if (response.status === 404) {
        throw new Error("Repository not found.");
      }
      if (!response.ok) {
        throw new Error(`GitHub API Error: ${response.status}`);
      }

      const events = await response.json();
      const pushEvents = events.filter(e => e.type === 'PushEvent');

      if (pushEvents.length > 0) {
        const latestEvent = pushEvents[0];
        
        // If this is the first fetch, just set the ID without notifying
        if (!lastEventId) {
          setLastEventId(latestEvent.id);
          addLog(`Connected. Latest push: ${latestEvent.payload.commits[0]?.message.slice(0, 30)}...`, 'success');
        } 
        // If we have a new event ID, it's a new push!
        else if (latestEvent.id !== lastEventId) {
          setLastEventId(latestEvent.id);
          const author = latestEvent.actor.login;
          const msg = latestEvent.payload.commits[0]?.message || 'No commit message';
          
          addLog(`ðŸš¨ NEW PUSH by ${author}: ${msg}`, 'alert');
          playNotification();
          
          // Show browser notification if possible
          if (("Notification" in window) && Notification.permission === "granted") {
            new Notification(`New Push to ${repo}`, { body: `${author}: ${msg}` });
          }
        } else {
          // No new changes
          // console.log('Polling... no new pushes');
        }
      }
    } catch (err) {
      setError(err.message);
      addLog(err.message, 'error');
      stopMonitoring();
    }
  };

  const startMonitoring = () => {
    if (!repo.includes('/')) {
      setError("Invalid format. Use 'owner/repo' (e.g., facebook/react)");
      return;
    }
    
    // Request notification permission for the browser
    if (("Notification" in window) && Notification.permission !== "granted") {
      Notification.requestPermission();
    }

    setIsMonitoring(true);
    addLog(`Starting monitor for ${repo}...`, 'info');
    setLastEventId(null); // Reset tracking
    fetchEvents(); // Initial fetch
    
    // Poll every 10 seconds (Note: Without a token, GitHub limits to 60 req/hr. With token 5000/hr)
    // 10s interval = 360 requests/hour. Need token for this speed.
    const intervalTime = token ? 10000 : 60000; 
    
    if (!token) {
      addLog("âš ï¸ No token provided. Polling slowed to 60s to avoid rate limits.", 'warning');
    }

    intervalRef.current = setInterval(fetchEvents, intervalTime);
  };

  const stopMonitoring = () => {
    setIsMonitoring(false);
    if (intervalRef.current) clearInterval(intervalRef.current);
    addLog("Monitoring stopped.", 'info');
  };

  return (
    <div className="min-h-screen bg-slate-900 text-slate-100 p-4 flex flex-col items-center font-sans">
      
      {/* Mobile-like Container */}
      <div className="w-full max-w-md bg-slate-800 rounded-2xl shadow-2xl overflow-hidden border border-slate-700 flex flex-col h-[80vh]">
        
        {/* Header */}
        <div className="bg-slate-950 p-6 border-b border-slate-800">
          <div className="flex items-center gap-3 mb-2">
            <Github className="w-8 h-8 text-blue-400" />
            <h1 className="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
              GitPulse
            </h1>
          </div>
          <p className="text-xs text-slate-400">
            Real-time push notifications simulator
          </p>
        </div>

        {/* Controls */}
        <div className="p-6 space-y-4 bg-slate-800/50">
          <div>
            <label className="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1 block">
              Repository
            </label>
            <input 
              type="text" 
              value={repo}
              onChange={(e) => setRepo(e.target.value)}
              disabled={isMonitoring}
              placeholder="owner/repo"
              className="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label className="flex items-center gap-2 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1">
              <Lock className="w-3 h-3" /> Personal Access Token (Optional)
            </label>
            <input 
              type="password" 
              value={token}
              onChange={(e) => setToken(e.target.value)}
              disabled={isMonitoring}
              placeholder="ghp_..."
              className="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-purple-500 outline-none transition-all"
            />
            <p className="text-[10px] text-slate-500 mt-1">
              Required for fast polling (10s). Without it, updates happen every 60s.
            </p>
          </div>

          <button
            onClick={isMonitoring ? stopMonitoring : startMonitoring}
            className={`w-full py-4 rounded-xl font-bold text-sm shadow-lg transition-all flex items-center justify-center gap-2 ${
              isMonitoring 
                ? 'bg-red-500/10 text-red-400 hover:bg-red-500/20 border border-red-500/50' 
                : 'bg-blue-600 hover:bg-blue-500 text-white shadow-blue-900/20'
            }`}
          >
            {isMonitoring ? (
              <>
                <Activity className="w-4 h-4 animate-pulse" /> Stop Monitoring
              </>
            ) : (
              <>
                <Bell className="w-4 h-4" /> Start Monitoring
              </>
            )}
          </button>
        </div>

        {/* Status Bar */}
        {error && (
          <div className="mx-6 p-3 bg-red-500/10 border border-red-500/20 rounded-lg flex items-center gap-2 text-red-400 text-xs">
            <AlertCircle className="w-4 h-4 flex-shrink-0" />
            {error}
          </div>
        )}

        {/* Logs Feed */}
        <div className="flex-1 overflow-y-auto p-4 space-y-3 bg-slate-900/50">
          <div className="flex items-center justify-between px-2">
            <span className="text-xs font-bold text-slate-500 uppercase">Live Event Feed</span>
            {isMonitoring && <RefreshCw className="w-3 h-3 text-blue-500 animate-spin" />}
          </div>
          
          {logs.length === 0 && (
            <div className="text-center text-slate-600 py-10 text-sm">
              Waiting for activity...
            </div>
          )}

          {logs.map((log) => (
            <div 
              key={log.id} 
              className={`p-3 rounded-lg border text-sm flex gap-3 animate-in fade-in slide-in-from-bottom-2 ${
                log.type === 'alert' ? 'bg-blue-500/10 border-blue-500/50 text-blue-200' :
                log.type === 'error' ? 'bg-red-500/10 border-red-500/50 text-red-200' :
                log.type === 'success' ? 'bg-green-500/10 border-green-500/50 text-green-200' :
                'bg-slate-800 border-slate-700 text-slate-300'
              }`}
            >
              <div className="mt-1">
                {log.type === 'alert' ? <Bell className="w-4 h-4" /> :
                 log.type === 'error' ? <AlertCircle className="w-4 h-4" /> :
                 log.type === 'success' ? <Check className="w-4 h-4" /> :
                 <Activity className="w-4 h-4" />}
              </div>
              <div className="flex-1">
                <div className="text-[10px] opacity-50 mb-1 font-mono">{log.time}</div>
                <div className="leading-tight">{log.message}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <p className="mt-4 text-slate-500 text-xs max-w-md text-center">
        This is a web simulation. For the actual mobile app code using React Native, please refer to the "React Native Source" file.
      </p>
    </div>
  );
}
